<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jcristobal.postitapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="22" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="jcristobal.postitapp.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name="jcristobal.postitapp.widget"
            android:label="PostItApp" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <!--
           <intent-filter>
                <action android:name="postitapp.widget.jcristobal.ACTUALIZAR_WIDGET"/>
            </intent-filter>
            -->
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@layout/widget_provider" />
        </receiver>

        <activity android:name="jcristobal.postitapp.WidgetConfig" >
            <intent-filter>
                <action android:name="android.apwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>
    </application>

</manifest>